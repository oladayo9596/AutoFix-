@{
    ViewData["Title"] = "Register";
    var role = ViewBag.Role ?? "Client";
    bool isMechanic = role == "Mechanic";
}

<style>
    .register-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #1a365d 0%, #2d4a72 50%, #4a5568 100%);
        position: relative;
        overflow: hidden;
    }

    .register-page::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #1a365d 0%, #2d4a72 50%, #4a5568 100%);
        opacity: 0.1;
    }   
    .register-container {
        position: relative;
        z-index: 1;
        padding: 80px 20px 40px;
    }

    .register-card {
        background: rgba(255, 255, 255, 0.95);
        backdrop-filter: blur(20px);
        border: 1px solid rgba(255, 255, 255, 0.2);
        border-radius: 24px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: all 0.3s ease;
        animation: slideInUp 0.6s ease-out;
    }

    .register-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.15);
    }

    @@keyframes slideInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }    
    .register-header {
        background: linear-gradient(135deg, #1a365d 0%, #2d4a72 50%, #4a5568 100%);
        padding: 40px 30px;
        text-align: center;
        color: white;
        position: relative;
        overflow: hidden;
    }

    .register-header::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
        animation: rotate 20s linear infinite;
    }

    @@keyframes rotate {
        from { transform: rotate(0deg); }
        to { transform: rotate(360deg); }
    }    .register-header h1 {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 10px;
        position: relative;
        z-index: 1;
    }

    .register-header p {
        font-size: 1.1rem;
        opacity: 0.9;
        margin: 0;
        position: relative;
        z-index: 1;
    }      
    .role-selector {
        border-radius: 20px;
        margin-top: 30px;
        position: relative;
        z-index: 1;
        backdrop-filter: blur(15px);
    }

    .role-option {
        background: transparent;
        border: none;
        border-radius: 14px;
        padding: 0;
        margin: 0;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        position: relative;
        overflow: hidden;
    }

    .role-option input {
        display: none;
    }

    .role-option input:checked + label {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.4);
    }

    .role-option input:checked + label::before {
        opacity: 1;
        transform: scale(1);
    }

    .role-option label {
        color: rgba(255, 255, 255, 0.9);
        font-weight: 600;
        font-size: 1.1rem;
        margin: 0;
        cursor: pointer;
        transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
        display: block;
        padding: 18px 25px;
        text-align: center;
        border-radius: 14px;
        position: relative;
        background: rgba(255, 255, 255, 0.1);
        border: 2px solid transparent;
        backdrop-filter: blur(10px);
    }

    .role-option label::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.2) 0%, rgba(118, 75, 162, 0.2) 100%);
        border-radius: 12px;
        opacity: 0;
        transform: scale(0.8);
        transition: all 0.3s ease;
        z-index: -1;
    }

    .role-option label:hover {
        background: rgba(255, 255, 255, 0.2);
        border-color: rgba(102, 126, 234, 0.5);
        transform: translateY(-1px);
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.2);
    }

    .role-option label:hover::before {
        opacity: 0.5;
        transform: scale(1);
    }

    .role-option label i {
        font-size: 1.3rem;
        margin-right: 8px;
        transition: transform 0.3s ease;
    }

    .role-option input:checked + label i {
        transform: scale(1.1);
    }.register-body {
        padding: 40px 30px;
    }

    .form-section {
        margin-bottom: 40px;
    }    .section-title {
        font-size: 1.4rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 25px;
        padding-bottom: 10px;
        border-bottom: 3px solid #667eea;
        position: relative;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: -3px;
        left: 0;
        width: 60px;
        height: 3px;
        background: #667eea;
        border-radius: 2px;
    }    .floating-label {
        position: relative;
        margin-bottom: 30px;
    }.floating-label input {
        width: 100%;
        padding: 20px 15px 15px;
        font-size: 16px;
        border: 2px solid #e1e5e9;
        border-radius: 12px;
        background: white;
        transition: all 0.3s ease;
        outline: none;
    }

    .floating-label input:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
        transform: translateY(-2px);
    }

    .floating-label label {
        position: absolute;
        top: 20px;
        left: 15px;
        font-size: 16px;
        color: #8b949e;
        transition: all 0.3s ease;
        pointer-events: none;
        background: white;
        padding: 0 5px;
    }

    .floating-label input:focus + label,
    .floating-label input:not(:placeholder-shown) + label {
        top: -8px;
        left: 12px;
        font-size: 12px;
        color: #667eea;
        font-weight: 600;
    }    .skills-section {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 20px;
        padding: 30px;
        margin-top: 30px;
        border: 2px solid #e1e5e9;
        transition: all 0.3s ease;
    }.skills-section.show {
        border-color: #667eea;
        box-shadow: 0 10px 30px rgba(102, 126, 234, 0.1);
    }

    .skills-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
        margin-top: 20px;
    }

    .skill-group h6 {
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 15px;
        font-size: 1.1rem;
    }

    .custom-checkbox {
        display: flex;
        align-items: center;
        margin-bottom: 12px;
        cursor: pointer;
        user-select: none;
        padding: 8px 12px;
        border-radius: 10px;
        transition: all 0.3s ease;
    }    .custom-checkbox:hover {
        background: rgba(102, 126, 234, 0.05);
    }

    .custom-checkbox input {
        opacity: 0;
        position: absolute;
    }    .custom-checkbox .checkmark {
        width: 20px;
        height: 20px;
        background: white;
        border: 2px solid #e1e5e9;
        border-radius: 6px;
        margin-right: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
        flex-shrink: 0;
    }

    .custom-checkbox input:checked + .checkmark {
        background: #667eea;
        border-color: #667eea;
        transform: scale(1.1);
    }

    .custom-checkbox .checkmark::after {
        content: 'âœ“';
        color: white;
        font-size: 12px;
        font-weight: bold;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .custom-checkbox input:checked + .checkmark::after {
        opacity: 1;
    }    .register-btn {
        background: linear-gradient(135deg, #1a365d 0%, #2d4a72 50%, #4a5568 100%);
        border: none;
        border-radius: 12px;
        padding: 18px 30px;
        font-size: 16px;
        font-weight: 600;
        color: white;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .register-btn::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
        transition: left 0.5s ease;
    }

    .register-btn:hover::before {
        left: 100%;
    }

    .register-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 25px rgba(102, 126, 234, 0.3);
    }    .register-footer {
        text-align: center;
        padding: 30px;
        border-top: 1px solid #f1f3f4;
    }

    .login-link {
        color: #667eea;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        position: relative;
    }

    .login-link::after {
        content: '';
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 2px;
        background: #667eea;
        transition: width 0.3s ease;
    }

    .login-link:hover::after {
        width: 100%;
    }    .brand-logo {
        width: 60px;
        height: 60px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 20px;
        font-size: 24px;
        position: relative;
        z-index: 1;
    }    .validation-errors {
        background: rgba(220, 53, 69, 0.1);
        border: 1px solid rgba(220, 53, 69, 0.3);
        border-radius: 12px;
        padding: 15px;
        margin-bottom: 20px;
        color: #dc3545;
    }    @@media (max-width: 768px) {
        .register-container {
            padding: 40px 15px 20px;
        }
        
        .register-body {
            padding: 30px 20px;
        }
        
        .register-header {
            padding: 30px 20px;
        }
        
        .register-header h1 {
            font-size: 2rem;
        }
        
        .role-option {
            margin: 10px 0;
        }
        
        .skills-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="register-page">
    <div class="register-container">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-8 col-lg-9 col-md-11">
                    <div class="register-card">
                        <div class="register-header">
                            <div class="brand-logo">
                                <i class="bi bi-person-plus-fill"></i>
                            </div>
                            <h1>Join AutoFix</h1>
                            <p>Create your account and start connecting with automotive professionals</p>
                            
                            <div class="role-selector">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="role-option">
                                            <input type="radio" name="roleSelection" id="roleClient" value="Client" @(role == "Client" ? "checked" : "") required />
                                            <label for="roleClient">
                                                <i class="bi bi-person me-2"></i>Register as Client
                                            </label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="role-option">
                                            <input type="radio" name="roleSelection" id="roleMechanic" value="Mechanic" @(role == "Mechanic" ? "checked" : "") required />
                                            <label for="roleMechanic">
                                                <i class="bi bi-tools me-2"></i>Register as Mechanic
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="register-body">
                            <form method="post" asp-action="Register">
                                <div asp-validation-summary="ModelOnly" class="validation-errors" style="display: none;"></div>
                                
                                <input type="hidden" id="selectedRole" name="role" value="@role" />

                                <div class="form-section">
                                    <h3 class="section-title">
                                        <i class="bi bi-person-circle me-2"></i>
                                        Personal Information
                                    </h3>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="floating-label">
                                                <input type="text" id="fullName" name="fullName" placeholder=" " required>
                                                <label for="fullName">
                                                    <i class="bi bi-person me-2"></i>Full Name
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="floating-label">
                                                <input type="text" id="userName" name="userName" placeholder=" " required>
                                                <label for="userName">
                                                    <i class="bi bi-at me-2"></i>Username
                                                </label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="floating-label">
                                        <input type="email" id="email" name="email" placeholder=" " required>
                                        <label for="email">
                                            <i class="bi bi-envelope me-2"></i>Email Address
                                        </label>
                                    </div>

                                    <div class="floating-label">
                                        <input type="tel" id="phoneNumber" name="phoneNumber" placeholder=" ">
                                        <label for="phoneNumber">
                                            <i class="bi bi-telephone me-2"></i>Phone Number (Optional)
                                        </label>
                                    </div>
                                </div>

                                <div class="form-section">
                                    <h3 class="section-title">
                                        <i class="bi bi-shield-lock me-2"></i>
                                        Security
                                    </h3>
                                    
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="floating-label">
                                                <input type="password" id="password" name="password" placeholder=" " required>
                                                <label for="password">
                                                    <i class="bi bi-lock me-2"></i>Password
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="floating-label">
                                                <input type="password" id="confirmPassword" name="confirmPassword" placeholder=" " required>
                                                <label for="confirmPassword">
                                                    <i class="bi bi-lock-fill me-2"></i>Confirm Password
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="mechanic-fields skills-section" style="display: @(isMechanic ? "block" : "none")">
                                    <h3 class="section-title">
                                        <i class="bi bi-gear-wide-connected me-2"></i>
                                        Professional Skills & Services
                                    </h3>
                                    
                                    <div class="skills-grid">
                                        <div class="skill-group">
                                            <h6><i class="bi bi-tools me-2"></i>Technical Skills</h6>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="skills" value="Engine Repair">
                                                <span class="checkmark"></span>
                                                <span>Engine Repair</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="skills" value="Transmission">
                                                <span class="checkmark"></span>
                                                <span>Transmission</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="skills" value="Brakes">
                                                <span class="checkmark"></span>
                                                <span>Brake Systems</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="skills" value="Electrical Systems">
                                                <span class="checkmark"></span>
                                                <span>Electrical Systems</span>
                                            </label>
                                        </div>
                                        
                                        <div class="skill-group">
                                            <h6><i class="bi bi-wrench me-2"></i>Specialized Areas</h6>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="skills" value="Suspension">
                                                <span class="checkmark"></span>
                                                <span>Suspension & Steering</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="skills" value="A/C Repair">
                                                <span class="checkmark"></span>
                                                <span>A/C & Heating</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="skills" value="Diagnostics">
                                                <span class="checkmark"></span>
                                                <span>Computer Diagnostics</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="skills" value="Body Work">
                                                <span class="checkmark"></span>
                                                <span>Body Work & Paint</span>
                                            </label>
                                        </div>
                                    </div>

                                    <div class="skills-grid mt-4">
                                        <div class="skill-group">
                                            <h6><i class="bi bi-car-front me-2"></i>Service Types</h6>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="services" value="Oil Change">
                                                <span class="checkmark"></span>
                                                <span>Oil Change & Maintenance</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="services" value="Tune-Up">
                                                <span class="checkmark"></span>
                                                <span>Engine Tune-Up</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="services" value="Battery Replacement">
                                                <span class="checkmark"></span>
                                                <span>Battery Service</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="services" value="Tire Service">
                                                <span class="checkmark"></span>
                                                <span>Tire Installation & Repair</span>
                                            </label>
                                        </div>
                                        
                                        <div class="skill-group">
                                            <h6><i class="bi bi-shield-check me-2"></i>Emergency Services</h6>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="services" value="Emergency Roadside">
                                                <span class="checkmark"></span>
                                                <span>Emergency Roadside</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="services" value="Towing">
                                                <span class="checkmark"></span>
                                                <span>Towing Service</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="services" value="Mobile Repair">
                                                <span class="checkmark"></span>
                                                <span>Mobile Repair</span>
                                            </label>
                                            <label class="custom-checkbox">
                                                <input type="checkbox" name="services" value="Inspection">
                                                <span class="checkmark"></span>
                                                <span>Vehicle Inspection</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>

                                <button type="submit" class="register-btn">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Create Account
                                </button>
                            </form>
                        </div>

                        <div class="register-footer">
                            <p class="mb-0">Already have an account? 
                                <a asp-action="Login" class="login-link">Sign in here</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>        $(document).ready(function() {
            function updateFormFields() {
                var role = $("input[name='roleSelection']:checked").val();
                // Update hidden input with selected role
                $("#selectedRole").val(role);
                
                if (role === "Mechanic") {
                    $(".mechanic-fields").show();
                } else {
                    $(".mechanic-fields").hide();
                }
            }
            
            // Update role selection when radio buttons change
            $("input[name='roleSelection']").change(function() {
                var selectedRole = $(this).val();
                $("#selectedRole").val(selectedRole);
                updateFormFields();
            });
            
            // Initialize on page load
            updateFormFields();
            
            // Form validation before submit
            $("form").on("submit", function(e) {
                var fullName = $("#fullName").val().trim();
                var userName = $("#userName").val().trim();
                var email = $("#email").val().trim();
                var password = $("#password").val();
                var confirmPassword = $("#confirmPassword").val();
                var role = $("#selectedRole").val();
                
                if (!fullName || !userName || !email || !password || !confirmPassword || !role) {
                    alert("Please fill in all required fields.");
                    e.preventDefault();
                    return false;
                }
                
                if (password !== confirmPassword) {
                    alert("Passwords do not match.");
                    e.preventDefault();
                    return false;
                }
                
                return true;
            });
        });
    </script>
}
